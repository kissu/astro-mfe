---
import ReactComponent from "../components/ReactComponent.jsx";
import SolidComponent from "../components/SolidComponent.jsx";
import VueComponent from "../components/Working.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{"Astro example"}</title>
    <link rel="stylesheet" href="http://localhost:7400/assets/App.css" />
    <script type="importmap">
      {
        "imports": {
          "react": "https://esm.sh/react",
          "react-dom": "https://esm.sh/react-dom",
          "solid-js": "https://esm.sh/solid-js",
          "vue": "https://esm.sh/vue@3.4.34"
        }
      }
    </script>
  </head>

  <body>
    <main>
      <h1>Welcome to <span class="text-purple-700 font-bold">Astro</span></h1>
      <ReactComponent client:only="react" />
      <SolidComponent client:only="solid" />
      <VueComponent />
    </main>
  </body>
</html>

<style>
  html {
    font-family: system-ui, sans-serif;
    background-color: #f6f6f6;
  }

  main {
    margin: auto;
    padding: 1.5rem;
    max-width: 60ch;
  }

  h1 {
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
  }
</style>
